<table>
  <tr id="legend">
    <td>Task</td>
    <td>Controls</td>
  </tr>
  <tr>
    <%= form_for Task.new do |f| %>
      <td>
        <%= f.label :task %>
        <%= f.text_field :task %>
      </td>
      <td><%= f.submit %></td>
    <% end %>
  </tr>
  <% @tasks.each do |task| %>
    <tr id="task_<%= task.id %>">
      <td><%= task.task %></td>
      <td>
        <button class="edit-button"><%= link_to 'Edit', edit_task_path(task) %></button>
        <button class="delete-button"><%= link_to 'Delete', task, :method => 'delete' %></button>
      </td>
    </tr>
  <% end %>
</table>

