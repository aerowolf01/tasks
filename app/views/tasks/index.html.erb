<h1>Task List</h1>
<%= render 'form' %>
<ul>
  <li id="legend">
    Controls  | Task
  </li>
  <% @tasks.each do |task| %>
    <li id="task_<%= task.id %>">
      <button class="edit-button"><%= link_to 'Edit', edit_task_path(task) %></button>
      <button class="delete-button"><%= link_to 'Delete', task, :method => 'delete' %></button> |
      <%= task.task %>
    </li>
  <% end %>
</ul>

